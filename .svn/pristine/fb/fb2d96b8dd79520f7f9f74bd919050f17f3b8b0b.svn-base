--게시판 넘버 시퀀스
CREATE SEQUENCE REVIEW_NUM_SEQ;

--후기 게시판 테이블
CREATE TABLE TABLE_INTERVIEW_REVIEW_BOARD(
	USER_ID VARCHAR2(100),
	REVIEW_NUM NUMBER(10),
	REVIEW_WRTIE_DATE DATE,
	REVIEW_INTERVIEW_DATE VARCHAR2(100),
	REVIEW_COMPANY_NAME VARCHAR2(100),
	REVIEW_JOB VARCHAR2(100),
	REVIEW_CAREER VARCHAR2(100),
	REVIEW_LEVEL VARCHAR2(100),
	REVIEW_RESULT VARCHAR2(100),
	REVIEW_TYPE VARCHAR2(100),
	REVIEW_EVALUATION VARCHAR2(100),
	REVIEW_NUM_OF_PEOPLE VARCHAR2(100),
	REVIEW_REVIEW VARCHAR2(500),
	REVIEW_INTERVIEW_Q1 VARCHAR2(200),
	REVIEW_INTERVIEW_Q2 VARCHAR2(200),
	REVIEW_INTERVIEW_Q3 VARCHAR2(200),
	REVIEW_TIP VARCHAR2(500),	
	CONSTRAINT INTERVIEW_REVIEW_BOARD_PK PRIMARY KEY(REVIEW_NUM), 
	CONSTRAINT INTERVIEW_REVIEW_BOARD_FK FOREIGN KEY(USER_ID) REFERENCES TABLE_USER(USER_ID)
);

