--첨부파일
CREATE TABLE TABLE_REVIEW_BOARD_FILE(
	USER_ID VARCHAR2(100),
	REVIEW_NUM NUMBER(10),
	REVIEW_CNTN_ID NUMBER(20),
	REVIEW_DCMT_RGSR_NO VARCHAR2(30),
	REVIEW_ATCH_FILE_CHING VARCHAR2(300),
	REVIEW_ATCH_DATA_SLP VARCHAR2(500),
	REVIEW_ATCH_ORGN_FILE_NAME VARCHAR2(300),
	REVIEW_ATCH_FILE_SIZE NUMBER(11, 2),
	REVIEW_TRNS_ERR_MSG VARCHAR2(4000),
	CONSTRAINT REVIEW_FILE_PK PRIMARY KEY (REVIEW_CNTN_ID),
