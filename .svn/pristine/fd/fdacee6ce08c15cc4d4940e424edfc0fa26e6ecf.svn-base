/* 송, 수신함  페이지 넘기는 버튼 */
.bbsListTbl {
	width: 100%;
	border-top: 2px solid #384d75;
}

.bbsListTbl th, .bbsListTbl td {
	padding: 10px;
	box-sizing: border-box;
	height: 55px;
}

.bbsListTbl th {
	border-bottom: 1px solid #ccc;
	background-color: #f0f3fa;
}

.bbsListTbl td {
	text-align: center;
	line-height: 1.3;
	border-bottom: 1px solid #ccc;
}

.pagination {
	padding: 0;
	text-align: center;
	margin-top: -40px;
}

.pagination a {
	display: inline-block;
}

.pagination a.pbtn {
	display: inline-block;
	text-align: center;
	vertical-align: middle;
	font-size: 0;
	padding: 7px;
}

.pagination a .pagenum {
	display: inline-block;
	width: 25px;
	height: 25px;
	line-height: 25px;
	text-align: center;
	vertical-align: top;
	font-size: 100%;
	font-family: '맑은 고딕', 'Malgun Gothic', sans-serif;
}

.pagination a .currentPage {
	border-radius: 3px;
	background: #384d75;
	color: #fff;
}

.pagination a:hover .pagenum {
	border-radius: 3px;
	background-color: #ddd;
}

.pagination .a:active .pagenum {
	border-radius: 3px;
	background: #384d75;
	color: #fff;
}

.pagination .a:visited .pagenum {
	border-radius: 3px;
	background: #384d75;
	color: #fff;
}

.currentPage{
	border-radius: 3px !important;
    background: #384d75 !important;
    color: #fff !important;
}

@media (max-width: 480px) {
.pagination a.pbtn {
	padding: 13px 0px 0px 5px;
	}
}